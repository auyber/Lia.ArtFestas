# Habilita a reescrita de URL
RewriteEngine On

# Remove .html das URLs (por exemplo: /about para /about.html)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# Redireciona URLs antigas para URLs limpas
RewriteRule ^index\.html$ / [R=301,L]
RewriteRule ^about$ /pages/about.html [R=301,L]
RewriteRule ^services$ /pages/services.html [R=301,L]
RewriteRule ^contact$ /pages/contact.html [R=301,L]

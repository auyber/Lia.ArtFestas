# Define o index.html como padrão
DirectoryIndex index.html

# Remove index.html da URL principal
RewriteEngine On
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html [NC]
RewriteRule ^index\.html$ / [R=301,L]

# Remove .html das páginas internas
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# Redireciona URLs antigas para URLs limpas
RewriteRule ^pages/about.html$ /about/ [R=301,L]
RewriteRule ^pages/services.html$ /services/ [R=301,L]
RewriteRule ^pages/contact.html$ /contact/ [R=301,L]

# Habilita a reescrita de URL
RewriteEngine On

# Remove o .html das URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ /pages/$1.html [NC,L]

# Redireciona URLs antigas (com .html) para URLs sem .html
RewriteRule ^index\.html$ / [R=301,L]
RewriteRule ^pages/about\.html$ /about [R=301,L]
RewriteRule ^pages/services\.html$ /services [R=301,L]
RewriteRule ^pages/contact\.html$ /contact [R=301,L]
